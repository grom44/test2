{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ user.gender }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.active }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ user.dateOfBirth ? user.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-toolbar" role="toolbar" aria-label="User functions">
        <div class="btn-group" role="group" aria-label="First group">
            <a class="btn btn-primary" role="button" href="{{ path('user_index') }}">Back to list</a>
        </div>  
        <div class="btn-group" role="group" aria-label="Second group"> 
            <a class="btn btn-primary" role="button" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
        </div>
        <div class="btn-group" role="group" aria-label="Second group"> 
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
